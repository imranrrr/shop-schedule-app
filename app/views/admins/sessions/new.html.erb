<div class="container">
  <h2 class="text-center">Log in</h2>

  <%= form_for(resource, as: resource_name, url: admin_session_path) do |f| %>
    <div class="d-flex flex-column align-items-center">
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Enter email", class:"form-control" %>
    </div>

    
      <div class="field mt-3">
        <%= f.password_field :password, autocomplete: "current-password", placeholder:"Enter password", class:"form-control" %>
      </div>

      <%# if devise_mapping.rememberable? %>
        <div class="field">
          <%#= f.check_box :remember_me %>
          <%#= f.label :remember_me %>
        </div>
      <%# end %>

      <div class="actions mt-4">
        <%= f.submit "Log in", class:"btn btn-success" %>
      </div>
    </div> 
  <% end %>
</div>

