<div class="container">
  <h2 class="text-center">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="d-flex flex-column align-items-center">
      <%= render "admins/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder:"Type Name", class:"form-control mb-2" %>
      </div>

      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Type Email", class:"form-control mb-2" %>
      </div>

      <div class="field">
        <% if @minimum_password_length %>
        <!-- <em>(<%#= @minimum_password_length %> characters minimum)</em> -->
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", placeholder:"Type Password (6 or more letters)", class:"form-control mb-2" %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"Type Password Again", class:"form-control mb-2" %>
      </div>

      <div class="actions d-flex flex-column">
        <%= f.submit "Sign up", class:"btn btn-success" %>
        <%= link_to "Log in", new_admin_session_path, class:"btn btn-sm" %>
      </div>
    </div>
  <% end %>


</div>
