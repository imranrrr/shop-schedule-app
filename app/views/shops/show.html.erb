<p style="color: green"><%= notice %></p>
<div class="container-fluid">
<div class="container d-flex justify-content-between">
  <div class="text-center" style="box-shadow: 2px 2px 7px black; width: 45%; border-radius: 15px;">
    <h2 style="margin-top: 60px"><%= @shop.name %></h2>
  </div>
  <div class="p-5" style="box-shadow: 2px 2px 7px black; width: 45%; border-radius: 15px;">
    <% if @shop.shop_schedules.present? %> 
      <% @shop.shop_schedules.each do |schedule| %>
        <% if (Date.today.strftime("%A") == schedule.day) && schedule.day_status != "Closed"  %>
          <p style="line-height: 5px;" class="mt-3 <%= (Date.today.strftime("%A") == schedule.day) ? "fw-bold" : "" %>"><span><%= (Date.today.strftime("%A") == schedule.day) ? "Hours:" : ""%></span> <%= schedule.day %> <%= schedule.opening_time.strftime("%H:%M")%> - <%= schedule.half_time.strftime("%H:%M") %>, <%= schedule.open_after_half_time.strftime("%H:%M")%> - <%= schedule.closing_time.strftime("%H:%M") %> </p>
        <% elsif (Date.today.strftime("%A") == schedule.day) && schedule.day_status == "Closed"  %>
          <p style="line-height: 5px;" class="<%= (Date.today.strftime("%A") == schedule.day) && "fw-bold" %>"><%= schedule.day %> <%= schedule.day_status %></p>
        <% end %>
        <% if schedule.day_status != "Closed" && (Date.today.strftime("%A") != schedule.day)  %>
          <p style="line-height: 5px;"><%= schedule.day %> <%= schedule.opening_time.strftime("%H:%M")%> - <%= schedule.half_time.strftime("%H:%M") %>, <%= schedule.open_after_half_time.strftime("%H:%M")%> - <%= schedule.closing_time.strftime("%H:%M") %> </p>
        <% end %>
        <% if schedule.day_status == "Closed" && (Date.today.strftime("%A") != schedule.day)  %>
          <p style="line-height: 5px;"><%= schedule.day %> <%= schedule.day_status %></p>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
  <div class="mt-5 d-flex flex-column align-items-center">
    <div  class="w-50 text-center">
      <%= link_to "Back to shops", root_path, class:"btn btn-dark", style:"width: 20%;" %>
    </div>
    <div class="d-flex text-center justify-content-center w-50 mt-2">
      <% if admin_signed_in? %>
        <%= link_to "Edit", edit_shop_path(@shop), class:"text-light btn btn-info", style:"margin-right: 5px;" %>
        <%= button_to "Destroy", @shop, method: :delete, class:"btn btn-danger" %>
        <% end %>
      </div>
  </div>
</div>
